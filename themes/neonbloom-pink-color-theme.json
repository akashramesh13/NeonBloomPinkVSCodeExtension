{
  "name": "NeonBloom Red Night",
  "type": "dark",
  "colors": {
    "editor.background": "#000000",
    "editor.foreground": "#cdd6f4",
    "editorLineNumber.foreground": "#666666",
    "editorCursor.foreground": "#ff5555",
    "editor.selectionBackground": "#ff555577",
    "editor.selectionHighlightBackground": "#ff555599",
    "editor.lineHighlightBackground": "#111111",
    "editorBracketMatch.background": "#000000",
    "editorBracketMatch.border": "#ff5555",
    "editorGutter.background": "#000000",

    "activityBar.background": "#000000",
    "activityBar.foreground": "#cdd6f4",
    "activityBarBadge.background": "#ff5555",
    "activityBarBadge.foreground": "#ffffff",

    "sideBar.background": "#000000",
    "sideBar.foreground": "#cdd6f4",

    "statusBar.background": "#000000",
    "statusBar.foreground": "#cdd6f4",
    "statusBar.debuggingBackground": "#ff5555",

    "tab.activeBackground": "#000000",
    "tab.inactiveBackground": "#111111",
    "tab.activeForeground": "#cdd6f4",
    "tab.inactiveForeground": "#888888",

    "editorIndentGuide.background": "#111111",
    "editorIndentGuide.activeBackground": "#222222"
  },
  "tokenColors": [
    {
      "scope": [
        "keyword",
        "storage.type",
        "constant.language",
        "support.function"
      ],
      "settings": {
        "foreground": "#ff5555" // One Dark Pro Night flat red
      }
    },
    {
      "scope": ["variable", "entity.name.function", "support.constant"],
      "settings": {
        "foreground": "#00aaff", // neon blue for functions
        "fontStyle": "bold"
      }
    },
    {
      "scope": ["string", "constant.numeric"],
      "settings": {
        "foreground": "#ddd500" // neon yellow
      }
    },
    {
      "scope": "comment",
      "settings": {
        "foreground": "#666666",
        "fontStyle": "italic"
      }
    }
  ]
}
